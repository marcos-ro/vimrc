" basic settings
set nocompatible
set noswapfile
set ignorecase
set nowrap
set encoding=utf8
set history=1000

" backup settings
set backup
set backupdir=~/.vim_backup/ " only work on unix systems

" indent settings
set autoindent
set smartindent
set expandtab
set tabstop=4
set shiftwidth=4

" visual settings
set number
set relativenumber
set laststatus=2
